<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GifTextureView">
        <attr name="gifSource" format="reference|string"/>
        <attr name="isOpaque" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="GifView">
        <attr name="freezesAnimation" format="boolean"/>
        <attr name="loopCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="GifImageView">
        <!--gif显示模式-->
        <attr name="gif_mode">
            <!--正圆形-->
            <enum name="circle" value="1"/>

            <!--矩形圆角-->
            <enum name="round" value="2"/>
        </attr>

        <!--圆角半径-->
        <attr name="gif_radius" format="dimension"/>

        <!--边缘线框宽度-->
        <attr name="gif_stroke_width" format="dimension"/>

        <!--边缘线框颜色-->
        <attr name="gif_stroke_color" format="color|reference"/>

        <!--是否使用边框-->
        <attr name="gif_is_use_border" format="boolean"/>

    </declare-styleable>
</resources>
